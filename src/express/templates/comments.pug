extends ./components/layout.pug

block content
  section.comments
    .comments__wrapper
      h1.visually-hidden Страница комментариев
      each offer, i in offers
        .comments__block
          .comments__header
            a.announce-card(href='#')
              h2.announce-card__title= offer.title
              span.announce-card__info
                span.announce-card__price= `{₽ ${offer.price}}`
                span.announce-card__type= offer.type === `sale` ? `ПРОДАМ` : `КУПЛЮ`
          ul.comments-list
            each comment, i in offer.comments
              li.js-card
                include ./components/comment-card.pug
