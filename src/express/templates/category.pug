extends ./components/layout

block content
  section.categories-list
    h1.visually-hidden Сервис объявлений "Куплю - продам"
    ul.categories-list__wrapper
      each category, i in categories
        li.categories-list__item
          include ./components/category-tile.pug
  section.tickets-list
    h2.visually-hidden= `Предложения из категории ${activeCategory.title}`
    .tickets-list__wrapper
      .tickets-list__header
        p.tickets-list__title #{activeCategory.title} <b class="js-qty"> #{activeCategory.count} </b>
      ul
        each offer, i in offers
          li.tickets-list__item
            include ./components/ticket-card
      include components/tickets-list-pagination
